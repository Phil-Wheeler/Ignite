@model Ignite.Models.Meeting

@{
    ViewData["Title"] = "Schedule New Meeting";
}

<section class="content-row meeting-landing">
    <div class="row">
        <div class="large-12 medium-12 small-12 columns">

            <h1 class="contrast">@ViewData["Title"]</h1>

        </div>
    </div>

</section>

<section class="content-row">
    <div class="row">

        <div class="large-9 medium-6 small-12 columns">

            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div class="form-horizontal">
                    <h4>Meeting</h4>
                    <hr />
                    <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Description" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Start" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Start" class="form-control" />
                            <span asp-validation-for="Start" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Venue" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Venue" class="form-control" />
                            <span asp-validation-for="Venue" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input type="file" asp-for="Image" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </form>

        </div>
        <div class="large-3 medium-6 hide-for-small-only columns">
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</section>


            @section Scripts {
                <script src="~/lib/jquery/dist/jquery.min.js"></script>
                <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
                <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
            }
