@using System.Security.Claims

@if (User.IsSignedIn())
{
    <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="menu contrast">
            <li>
                <a asp-controller="Manage" asp-action="Index" title="Manage">Hello @User.GetUserName()</a>
            </li>
            @if(User.IsInRole("Admin")){
            <li>
                <a asp-controller="Admin" asp-action="Index" title="Administrator">Admin</a>
            </li>
            }
            <li>
                <a asp-controller="Meetings" asp-action="Index" title="Meetings">Meetings</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="menu contrast">
        <li><a href="/">Home</a></li>
        <li><a asp-action="Index" asp-controller="Meetings">Meetings</a></li>
        <li><a asp-action="About" asp-controller="Home">About</a></li>
    </ul>
}
